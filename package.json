{
    "name": "superhero-auth-server",
    "version": "1.0.0",
    "description": "Server for hypersign studio web portal",
    "main": "dist/index",
    "typings": "dist/index",
    "scripts": {
        "setup": "npm run setEnv && npm run build && npm run newdb && npm run bootstrap",
        "newdb": "npm run start -- --newdb",
        "setup-noenv": "npm run build && npm run start -- --newdb && npm run setUI",
        "setEnv": "if [ -e .env.staging ]; then cp .env.staging .env; fi",
        "setUI": "mkdir -p public && mkdir -p dist/public && cp -R ../client/dist/* public && cp -R public/* dist/public",
        "start": "node dist/index.js",
        "dev": "nodemon src/index.ts",
        "build": "tsc -p .",
        "bootstrap": "npm run start -- --bootstrap",
        "test": "mocha -r ts-node/register src/tests/**/*.test.ts"
    },
    "author": "Vishwas Anand Bhushan",
    "license": "MIT",
    "dependencies": {
        "aes-js": "^3.1.2",
        "command-line-args": "^5.1.1",
        "command-line-usage": "^6.1.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "lds-sdk": "^4.0.1",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.4.11",
        "qrcode": "^1.4.4",
        "sha.js": "^2.4.11",
        "simple-node-logger": "^18.12.24",
        "sqlite3": "^5.0.0",
        "uuid": "^8.2.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/node": "^14.0.23",
        "nodemon": "^2.0.4",
        "ts-node": "^8.10.2",
        "typescript": "^3.4.0"
    }
}